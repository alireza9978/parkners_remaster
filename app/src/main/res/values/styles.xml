<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMapConteinersBack</item>
        <item name="colorPrimaryDark">@color/colorLightOff</item>
        <item name="colorAccent">@color/colorMapItemBack</item>
        <item name="android:fontFamily">@font/vazir</item>
    </style>


    <style name="AppTheme.MapActivity" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.SearchActivity" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/Theme.Holo">
        <item name="android:editTextColor">@color/colorText</item>
        <item name="editTextColor">@color/colorText</item>
        <item name="editTextBackground">@color/colorLightOff</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fillEnabled">false</item>
        <item name="android:background">@color/colorMapItemBack</item>
    </style>

    <style name="AppTheme.TextView" parent="@android:style/Theme.Holo">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
